@using AppPortfolio.Controllers;
@model AppPortfolio.Models.DataModels.Comment

@{
    ViewBag.Title = "پاسخ";
}



<div class="mb-200"></div>
<div class="page-content">
    <div class="container mb-100">

        <div class="row">
            <div class="col-md-10 text-justify blog-posts post-single">
                <h2>@ViewBag.Title</h2>
                <div class="post-comments">
                    <div class="custom-heading style-1">
                    </div>
                    <ul class="media-list comments-li">
                        <li class="media comment">
                            <div class="media-right">
                                <a href="#" title="@Model.Name" class="avatar">
                                    <img src="~/wwwroot/img/news/avatar.png" class="media-object img-responsive img-circle" alt="@Model.Name" />
                                </a>
                            </div>
                            <div class="media-body">
                                <h6 class="media-heading author">
                                    @Model.Name
                                </h6>
                                <p class="date direction-ltr">
                                    @Model.Date.ToFullPersianDate().ToLongDateTime()
                                </p>
                                <p>@Model.Text</p>
                            </div>
                        </li>
                    </ul><!-- .comments-li end -->
                </div><!-- .post-comments end -->
                <!--ترجمه شده توسط مرجع تخصصی برنامه نویسان-->
                <!-- .comment-form start -->
                <!-- .comment-form end -->
                <div class="comment-form">
                    <div id="respond">
                        <div class="custom-heading style-1">
                        </div><!-- .custom-heading end -->
                        @using (Html.BeginForm("Respond", "News", FormMethod.Post)) {
                            @Html.AntiForgeryToken()
                            <input type="hidden" value="@Model.NewsID" name="newsID" />
                            <input type="hidden" value="@Model.ID" name="parentID" />
                            Model.Text = "";
                            <div class="form-group wpcf7-message">
                                <label>
                                    پاسخ
                                </label>
                                @Html.TextAreaFor(model => model.Text, new { @class = "wpcf7-text form-control", rows = 10, cols = 10 })
                                @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
                            </div>
                            <input type="submit" class="wpcf7-submit btn btn-primary float-left comment-reply" value="ارسال" />
                        }
                    </div><!-- #respond end -->
                </div>
            </div>
        </div>
    </div>
</div>







@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
