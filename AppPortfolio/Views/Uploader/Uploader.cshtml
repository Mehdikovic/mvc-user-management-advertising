
@{
    ViewBag.Title = "آپلودر";
    Layout = "~/Views/Shared/_Default_Layout.cshtml";
}
<h1>آپلودر</h1>
<hr />
<div class="row">
    @using (Html.BeginForm("Uploader", "Uploader", FormMethod.Post, new { enctype = "multipart/form-data" })) {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <div class="form-group">
                <div class="col-md-10">
                    <input id="media" name="media" type="file" class="english-font path-control-width" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">

                    <input type="submit" id="upload_submit" value="شروع آپلود" class="btn btn-danger" />
                    <span class="text-danger text-left direction-ltr">
                        @ViewBag.Message
                    </span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <p class="text-left direction-ltr">
                        <span class="alert alert-danger text-left direction-ltr">Path of Last Uploaded File:</span>
                        <span class="test" data-toggle="tooltip" data-placement="top" title="Copy to Clipboard">
                            <span role="alert" class="alert alert-success text-left direction-ltr" id="copy_to_clipboard">
                                @ViewBag.Path
                            </span>
                        </span>
                    </p>
                    <hr />
                </div>
            </div>
        </div>
    }
</div>


@section scripts{
    <script src="~/wwwroot/Manage/js/clipboardcopy.js" type="text/javascript"></script>
    <script type="text/javascript">
        (function ($) {
            $('[data-toggle="tooltip"]').tooltip();

        })(jQuery);
    </script>
}
